<Window x:Class="Claude.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Claude"
        mc:Ignorable="d"
        Title="Claude" Height="450" Width="800">

    <Grid Name="windowMain" RenderTransformOrigin="0.51,0.194">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="menuHeader" Text="This is eventually gonna be a menu bar" Grid.Column="0" Grid.Row="0"></TextBlock>
        <ScrollViewer x:Name="smallerBoxInstalled" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Grid.Column="0" Grid.Row="1"></ScrollViewer>
        <ScrollViewer x:Name="biggerBoxInstalled" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Grid.Column="1" Grid.Row="1">
        </ScrollViewer>
    </Grid>
</Window>
