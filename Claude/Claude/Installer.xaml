<Window x:Class="Claude.Installer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Claude"
        mc:Ignorable="d"
        Title="Installer" Height="600" Width="400">
    <StackPanel x:Name="MainContent" Orientation="Vertical">
        <StackPanel x:Name="ContentField" Orientation="Vertical" Height="520"></StackPanel>
        <DockPanel x:Name="ButtonsField" VerticalAlignment="Bottom">
            <Button x:Name="PreviousButton" Content="&lt;-- Previous" HorizontalAlignment="Left" Margin="25,10,10,10"></Button>
            <Button x:Name="NextButton" Content="Next --&gt;" HorizontalAlignment="Right" Margin="10,10,25,10"></Button>
        </DockPanel>
    </StackPanel>
</Window>
